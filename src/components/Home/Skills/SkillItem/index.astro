---
import { Card, CardContent } from "@/components/ui/card";

interface Props {
  skillName: string;
}
const { skillName } = Astro.props;
---

<Card className="h-24 w-[280px]">
  <CardContent className="flex h-full items-center justify-start gap-4 pt-6">
    <div class="size-10">
      <slot />
    </div>
    <p class="text-xl">{skillName}</p>
  </CardContent>
</Card>
